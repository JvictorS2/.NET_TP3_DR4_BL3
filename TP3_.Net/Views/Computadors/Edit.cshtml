@model TP3_.NET.Models.Computador

@{
    ViewData["Title"] = "Editar Computador";
}

<h1>Editar Computador</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Processador" class="control-label"></label>
                <input asp-for="Processador" class="form-control" />
                <span asp-validation-for="Processador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlacaMae" class="control-label"></label>
                <input asp-for="PlacaMae" class="form-control" />
                <span asp-validation-for="PlacaMae" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memoria" class="control-label"></label>
                <input asp-for="Memoria" class="form-control" />
                <span asp-validation-for="Memoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HD" class="control-label"></label>
                <input asp-for="HD" class="form-control" />
                <span asp-validation-for="HD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPratrimonio" class="control-label"></label>
                <input asp-for="NumeroPratrimonio" class="form-control" />
                <span asp-validation-for="NumeroPratrimonio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCompra" class="control-label"></label>
                <input asp-for="DataCompra" class="form-control" />
                <span asp-validation-for="DataCompra" class="text-danger"></span>
            </div>
            <div class="Computador_Edit_btns">
                <div >
                    <input class="my_btn action_my_btn" type="submit" value="Salvar"  />
                </div>
                <div>
                    <a class="my_btn" asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
